{#
/**
 * @file
 * Eau de Web Theme implementation for a 'form' element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the form.
 *
 * @see template_preprocess_form()
 *
 * @ingroup themeable
 */
#}
{% extends "form.html.twig" %}

{% block form %}
  {{ attach_library('edwt/bc--button-group') }}

  <form{{ attributes.addClass('input-group') }}>
    {{ children }}
  </form>
{% endblock %}
