{#
/**
 * @file
 * WWD override to display a node.
 */
#}

{{ attach_library('wwd/n--multimedia--video-teaser-column') }}

{%
  set classes = [
    'node',
    'node--' ~ node.bundle|clean_class,
    'node--' ~ node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
  ]
%}

<article{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}

    {{ content.field_video }}

  <div class="node--content mt-2">
    <div class="node--date">
      {{- date -}}
    </div>

    <h4{{ title_attributes.addClass('node--title') }}>
      {{- label -}}
    </h4>

    {{ content|without('field_video') }}
  </div>
</article>
