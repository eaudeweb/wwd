{#
/**
 * @file
 * WWD override to display a node.
 */
#}

{{ attach_library('wwd/n--multimedia--video-teaser') }}

{%
  set classes = [
    'node',
    'node--' ~ node.bundle|clean_class,
    'node--' ~ node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
  ]
%}

<article{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}

  <div class="row">
    {{ content.field_video }}

    <div class="node--content col">
      <div class="node--date">
        {{- date -}}
      </div>

      <h4{{ title_attributes.addClass('node--title') }}>
        <a href="/outreach-material" rel="bookmark">
          {{- label -}}
        </a>
      </h4>
      {{ content|without('field_video') }}
    </div>
  </div>
</article>
