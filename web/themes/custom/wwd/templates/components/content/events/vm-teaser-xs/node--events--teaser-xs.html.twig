{#
/**
 * @file
 * WWD override to display a node.
 */
#}

{{ attach_library('wwd/n--events--teaser-xs') }}

{%
  set classes = [
    'node',
    'node--' ~ node.bundle|clean_class,
    'node--' ~ node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
  ]
%}

<article{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}

  <div class="node--header d-flex">
    {{- content.field_event_date -}}
    {{- content.field_image -}}
  </div>

  <div class="node--content">
    <a href="/events-list?country={{ node.field_country.entity.id }}" class="link-field-country">
      {{- content.field_country -}}
    </a>

    <h3 class="node--title mb-0">
      {{- label -}}
    </h3>

    {{- content.field_organizer -}}

    <a
      href={{ content.field_link.0 }}
      class="btn btn-link btn-arrow me-auto"
      type="button"
    >
      {{- "Read More"|t -}}
    </a>
  </div>
</article>
