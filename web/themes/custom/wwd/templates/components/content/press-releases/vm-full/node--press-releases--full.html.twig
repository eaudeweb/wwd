{#
/**
 * @file
 * WWD override to display a node.
 */
#}

{{ attach_library('wwd/n--message--full') }}

{%
  set classes = [
    'node',
    'node--' ~ node.bundle|clean_class,
    'node--' ~ node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
  ]
%}

<article{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}

  <div class="article--header bgg-blue py-region">
    <div class="container">
      <h1 class="node--title text-white text-uppercase">
        {{ label }}
      </h1>
    </div>
  </div>

  <div class="node--content py-3 py-md-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          {{- date -}}
          {{- content -}}
        </div>
      </div>
    </div>
  </div>
</article>
