{#
/**
 * @file
 * WWD override to display a node.
 */
#}

{{ attach_library('wwd/n--message--slider') }}

{%
  set classes = [
    'node',
    'node--' ~ node.bundle|clean_class,
    'node--' ~ node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
    view_mode ? 'node--vm-' ~ view_mode|clean_class,
  ]
%}

<article{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}

  <div class="row">
    <div class="col-12 col-sm-auto mb-3 mb-sm-0 align-self-center">
      {{ content.field_media_image }}
    </div>

    <div class="col-12 col-sm">
      {{ content.field_message_date }}

      <h3{{ title_attributes.addClass('node--title') }}>
        {{- label -}}
      </h3>

      {{ content|without('field_media_image', 'field_message_date') }}

      <a href="{{ url }}" class="btn btn-link btn-arrow" rel="bookmark">
        {{- "Read more"|t -}}
        <span class="visually-hidden">{{ "About"|t }} {{ label.0 }}</span>
      </a>
    </div>
  </div>

</article>
