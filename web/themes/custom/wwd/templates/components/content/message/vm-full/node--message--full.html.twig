{#
/**
 * @file
 * WWD override to display a node.
 */
#}

{{ attach_library('wwd/n--message--full') }}

{%
  set classes = [
    'node',
    'node--' ~ node.bundle|clean_class,
    'node--' ~ node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
  ]
%}

<article{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}

  <div class="article--header bgg-blue py-region">
    <div class="container">
      <h1 class="node--title text-white text-uppercase">
        {{ label }}
      </h1>

      {{ content.field_message_position }}

      {%- if content.field_video.0 -%}
        {{- content.field_video -}}
      {%- endif -%}
    </div>
  </div>

  <div class="container">
    <div class="node--content">
      <div class="row g-0">
        <div class="col-1 col-message-left"></div>

        <div class="col-11 col-message-right">
          {{ content.field_media_image }}

          {{ content.body }}
          {{ content.field_gradeints }}

          <a href="/messages" class="btn btn-outline-primary btn-back-message">
            {{ previous_message_btn|t }}
          </a>
        </div>
      </div>
    </div>
  </div>
</article>
