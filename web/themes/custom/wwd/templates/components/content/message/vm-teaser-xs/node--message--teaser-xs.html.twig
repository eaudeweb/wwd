{#
/**
 * @file
 * WWD override to display a node.
 */
#}

{{ attach_library('wwd/n--message--teaser-xs') }}

{%
  set classes = [
    'node',
    'node--' ~ node.bundle|clean_class,
    'node--' ~ node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
    view_mode ? 'node--vm-' ~ view_mode|clean_class,
  ]
%}

<article{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}

  <div class="row g-0 align-items-center">
    <div class="col-auto">
      {{ content.field_media_image }}
    </div>

    <div class="col node--content">
      <div{{ title_attributes.addClass('node--title') }}>
        {{- label -}}
      </div>

      <a href="{{ url }}" class="btn btn-link btn-clear" rel="bookmark">
        {{ "Read more"|t }}
        <span class="visually-hidden">{{ "About"|t }} {{ label.0 }}</span>
      </a>
    </div>
  </div>
</article>
