{#
/**
 * @file
 * WWD theme implementation to display a paragraph.
 */
#}

{%- if 'to bottom right' in content.field_direction.0 -%}
  {%- set deg = "-45" -%}
{%- else -%}
  {%- set deg = "180" -%}
{%- endif -%}

{%- if 'On' in content.field_use_gradient.0 -%}
  background: {{ content.field_gradient_type.0 }}({{ deg }}deg, {{ content.field_gradient_first_color.0 }} 0%, {{ content.field_gradient_second_colour.0 }} 100%);
{%- else -%}
  background-color: {{ content.field_background_color.0 }};
{%- endif -%}

