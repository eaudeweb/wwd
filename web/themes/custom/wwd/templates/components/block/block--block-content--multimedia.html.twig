{#
/**
 * @file
 * WWD Theme override the display for multimedia block.
 */
#}

{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}

<div{{attributes.addClass(classes)}}>
  {{ title_prefix }}
  {% if label %}
    <h2{{title_attributes.addClass('h1', 'block--title')}}>
      {{- label -}}
    </h2>
  {% endif %}
  {{ title_suffix }}
  {% if multimedia_type == 'logos' %}
    <div class="multimedia-info">
      {{ content.body }}
    </div>
  {% endif %}
  <div{{ content_attributes.addClass('block__content') }}>
    <div class="row multimedia-rows">
      {% for type, rows in content.referenced_nodes %}
        {% for row in rows %}
          <div class="row-{{ type }}">{{ row|render }}</div>
        {% endfor %}
      {% endfor %}
    </div>
  </div>
  {% if not multimedia_type == 'logos' %}
    {% if content.body is not empty %}
      <div class="multimedia-additional-info">
        {{ content.body }}
        {{ content.field_cta }}
      </div>
    {% endif %}
  {% endif %}
</div>

