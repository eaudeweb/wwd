{#
/**
 * @file
 * WWD Theme override the display for multimedia block.
 */
#}

{{ attach_library('wwd/b--multimedia--logos') }}

{%
  set classes = [
    'block',
    'block--multimedia--logos',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}

<div{{attributes.addClass(classes)}}>
  {{ title_prefix }}
  {{ title_suffix }}

  <div class="row g-0 border">
    <div class="col-xl-3 w-head">
      {%- if label -%}
        <div{{title_attributes.addClass('block--title')}}>
          {{- label -}}
        </div>
      {%- endif -%}

      {{- content_attributes|replace({'&quot;': '', 'data-body: ': ''}) -}}
    </div>

    <div class="col">
      {{ content }}
    </div>
  </div>
{# #edeff3 #}
</div>

