{#
/**
 * @file
 * WWD override for a main view template.
 */
#}
{%
  set classes = [
    'view',
    'view-' ~ id|clean_class,
    'view-id-' ~ id,
    'view-display-id-' ~ display_id,
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}

<div{{attributes.addClass(classes)}}>
  {{ title_prefix }}
  {{ title_suffix }}

  {% if attachment_before %}
    <div class="row">
      <div class="attachment attachment-before col-md-7 position-relative">
        {{ attachment_before }}
      </div>
    {% endif %}

    {% if rows %}
      <div class="view-content {{ attachment_before ? ' col-md-5' }}">
        <div class="vc-offcial-posters">
          {{ rows }}
        </div>
      </div>
    {% elseif empty %}
      <div class="view-empty">
        {{ empty }}
      </div>
    {% endif %}

    {% if attachment_before %}
    </div>
  {% endif %}

  {% if pager %}
    {{ pager }}
  {% endif %}

  {% if attachment_after %}
    <div class="attachment attachment-after">
      {{ attachment_after }}
    </div>
  {% endif %}

  {% if more %}
    {{ more }}
  {% endif %}

  {% if footer %}
    <div class="view-footer">
      {{ footer }}
    </div>
  {% endif %}
</div>
