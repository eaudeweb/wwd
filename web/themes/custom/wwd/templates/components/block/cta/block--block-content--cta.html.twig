{#
/**
 * @file
 * WWD Theme override the display for multimedia block.
 */
#}

{{ attach_library('wwd/b--cta') }}

{%
  set classes = [
    'block',
    'block--cta',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}

<div{{attributes.addClass(classes)}}>
  {{ title_prefix }}
  {%- if label -%}
    <h2{{title_attributes.addClass('h1','block--title')}}>
      {{- label -}}
    </h2>
  {%- endif -%}
  {{ title_suffix }}

  <div class="bg-gradient" style="{{- content.field_background.0|render|striptags|spaceless -}}">
    {{ content|without('field_background') }}
  </div>
</div>
